{
  "manifest_version": 2,

  "name": "Tools99",
  "short_name": "Tools99",
  "description": "Tools99 is a bookmarklet toolkit that includes useful scripts and websites.",
  "version": "1.4",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "http://tools99.kaifage.com/"
  ],
  "content_security_policy":"script-src 'self' https://www.google-analytics.com; object-src 'self'; img-src *",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "app.html"
  }
}